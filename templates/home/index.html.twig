{% extends 'base.html.twig' %}

{% block title %}Association Radiance{% endblock %}

{% block body %}
    <script src="{{ asset('handleMenu.js') }}"></script>

    <header>
        <nav class="navbar container">
            <a href="#banner" class="">
                <img src="{{ asset('images/logo.webp') }}" alt="Association Radiance" class='logo'/>
            </a>
            <div class="navbar-menu" id="menu">
                <a href="#about" class="navbar-button">Qui sommes-nous ?</a>
                <a href="#edition-2025" class="navbar-button">Radiance LAN 2025</a>
                <a href="#edition-2024" class="navbar-button">Radiance LAN 2024</a>
                <a href="#partners" class="navbar-button">Nos partenaires</a>
                <a href="#engagement" class="navbar-button">Nos engagements</a>
                <a href="#contact" class="navbar-button">Nous contacter</a>
            </div>

            <img src="{{ asset('images/icons/menu-line.png') }}" alt="" id="menu-button" class="navbar-menu-control"/>
        </nav>
    </header>

    <main id="main">
        <section class="section-banner" id="banner">
            <div class="container">
                {{ include('/home/_banner.html.twig') }}
            </div>
        </section>

        <section class="section-about" id="about">
            <div class="background"></div>
            <div class="container">
                {{ include('/home/_about.html.twig') }}
            </div>
        </section>

        <section class="section-edition2025" id="edition-2025">
            <div class="container">
                {{ include('/home/_edition2025.html.twig') }}
            </div>
        </section>

        <section class="section-edition2024" id="edition-2024">
            <div class="container">
                {{ include('/home/_edition2024.html.twig') }}
            </div>
        </section>

        <section class="section-partner" id="partners">
            <div class="container">
                {{ include('/home/_partner.html.twig') }}
            </div>
        </section>

        <section class="section-engagement" id="engagement">
            <div class="container">
                {{ include('/home/_engagement.html.twig') }}
            </div>
        </section>

        <section class="section-contact" id="contact">
            <div class="container">
                {{ include('/home/_contact.html.twig') }}
            </div>
        </section>

        <footer>
            <div class="container">
                <a href="https://www.instagram.com/association_radiance" class="footer-link" target="_blank">
                    <img src="{{ asset('images/icons/instagram-fill.png') }}" alt="Instagram" aria-label="Instagram"/>
                </a>
                <a href="https://discord.com/invite/mcdVebJYXb" class="footer-link" target="_blank">
                    <img src="{{ asset('images/icons/discord-fill.png') }}" alt="Discord" aria-label="Discord"/>
                </a>
            </div>
        </footer>
    </main>

{% endblock %}
